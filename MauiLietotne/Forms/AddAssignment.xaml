<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLietotne.Forms.AddAssignment"
             Title="AddAssignment">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Izveidot jaunu Assignment!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <HorizontalStackLayout>
                <Label Text="Assignment ID: "/>
                <Entry x:Name="txtAssignmentID" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="ITSupport ID: "/>
                <Entry x:Name="txtITSupportID" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Ticket ID: "/>
                <Entry x:Name="txtTicketID" />
            </HorizontalStackLayout>
            <VerticalStackLayout>
                <Label Text="Comment: " />
                <Editor x:Name="txtComment" AutoSize="TextChanges" HeightRequest="80" />
            </VerticalStackLayout>
            <Button x:Name="btnAdd" Text="Pievienot" Clicked="btnAdd_Clicked"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>